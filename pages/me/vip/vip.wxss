/* pages/me/vip/vip.wxss */
page {
    background-color: #1d191a;
}

/* 空态 */
.empty_view {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.empty_view .place_holder {
    margin-top: 50%;
    display: block;
    text-align: center;
    color: #cccccc;
    font-size: 35rpx;
}

.card {
    color: white;
    position: relative;
    width: 700rpx;
    height: 450rpx;
    border-radius: 20rpx;
    background: url("http://pkt.zoosnet.net/site/74153360/chat_left_img_share_cn.png") #00c7c6 no-repeat;
    margin: 10rpx auto;
    background-size: 300rpx;
    background-position:center;
}

.card-back {
    color: white;
    position: relative;
    width: 700rpx;
    height: 450rpx;
    border-radius: 20rpx;
    background: #00c7c6;
    margin: 10rpx auto;
    background-position:center;
}

.card-no {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 0.8rem;
}
.card-type {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    font-weight: 600;
    font-size: 1.2rem;
}
.card-expire {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    font-size: 0.9rem;
}
.card-introduce {
    position: absolute;
    top: 50rpx;
    left: 50rpx;
}
.card-introduce .title {
    display: block;
    font-size: 1.2rem;
}
.card-introduce .item {
    margin-top: 15rpx;
    display: block;
    font-size: 0.7rem;
}
.card-introduce .address {
    margin-top: 35rpx;
    display: block;
    font-size: 0.9rem;
}
.card-copy {
    position: absolute;
    bottom: 30rpx;
    right: 30rpx;
    font-size: 8px;
}

.vip-logo {
    position: absolute;
    width: 300rpx;
}