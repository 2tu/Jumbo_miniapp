.home {
  background-color: #fff;
}


/* 模块标题 */
.block_title {
  font-size: 1.2rem;
  color: #333;
  margin: 30rpx 0 10rpx 10rpx;
}
.block_title image {
  width: 50rpx;
  vertical-align: text-bottom;
}


/* 优选课程 */
.recommend_class .class_item {
    width: 100%;
}

.recommend_class .class_item image {
  width: 100%;
}


/* 精品活动 */
.activity {
  margin: 10rpx 0;
  padding: 0 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.activity .activity_item {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.activity_item image {
  margin-top: 20rpx;
  width: 50%;
}

.activity_item text {
  color: #aaa;
  font-weight: 400;
  font-size: 0.7rem;
  margin: 15rpx 0 15rpx 0;
}


/* 通知 */
.inform {
  margin-top: 10rpx;
}

.inform image {
  width: 100%;
}

.inform .sign-up {
  padding: 30rpx 200rpx;
}

.inform .sign-up button {
  border-style: none;
  color: #fff;
  background-color: #33bcb4;
  border-radius: 10rem;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}


/* 精选热门课程 */
.hot-course {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 0 10rpx;
}

.course_item {
  display: inline-block;
  width: 340rpx;
  height: 520rpx;
  margin: 20rpx 5rpx;
  border-radius: 10rpx;
  box-shadow: 0 3rpx 10rpx #aaa;
  overflow: hidden;
}

.course_item .item_top {
  height: 320rpx;
  overflow: hidden;
}

.course_item .item_top .top_bg {
  width: 100%;
}

.course_item .item_middle {
  height: 130rpx;
  padding: 0 10rpx;
}

.course_item .item_middle .title {
  color: #333;
  font-size: 0.9rem;
  margin: 15rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  line-clamp: 1;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  max-lines: 1rem;
}

.course_item .item_middle .desc {
  color: #aaa;
  font-size: 0.8rem;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-lines: 2rem;
}

.course_item .item_bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ea2000;
  padding: 10rpx;
}


/* 热门课程推荐 */
.recommend-course {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 0 20rpx;
}

.recommend-course .course_item {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-around;
}

.recommend-course .course_item .item_left {
  width: 300rpx;
}

.recommend-course .course_item .item_left image {
  width: 100%;
}

.recommend-course .course_item .item_right {
  padding: 10rpx;
  width: 400rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.recommend-course .course_item .item_right .title {
  color: #333;
  font-size: 0.9rem;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  line-clamp: 2;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-lines: 2rem;
}

.recommend-course .course_item .item_right .bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ea2000;
}

.recommend-course .course_item .item_right .bottom .price {
  font-size: 1.2rem;
}

.recommend-course .course_item .item_right .bottom .purchase {
  font-size: 0.8rem;
  color: #fff;
  background: #ea2000;
  border-radius: 0.2rem;
  border-style: none;
  padding: 10rpx 15rpx;
}


/* 场馆 */
.venue {
  padding: 20rpx;
}

.venue image {
  width: 100%;
  margin: 10rpx 0;
}

/* 预约报名 */
.booking .submi-btn{
  margin: 20rpx;
}

.submi-btn button {
  border-style: none;
  color: #fff;
  background-color: #33bcb4;
  border-radius: 0.5rem;
  width: 100%;
  height: 50px;
  line-height: 48px;
}
.input-class {
  color: #6a6a6a;
}


