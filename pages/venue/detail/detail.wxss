page {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .info-title {
    margin:20rpx 0 0 20rpx; 
    border-left: red 10rpx solid; 
    padding-left: 20rpx; 
    color: red; 
  }
  .detail {
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    margin-bottom: 0rpx;
  }
  .detail .title {
    font-size: 40rpx;
    margin: 10rpx;
    color: black;
    text-align: justify;
  }
  .detail .price {
    color: red;
    font-size: 40rpx;
    margin: 10rpx;
  }
  .line_flag {
    width: 80rpx;
    height: 1rpx;
    display: inline-block;
    margin: 20rpx auto;
    background-color: gainsboro;
    text-align: center;
  }
  .line {
    width: 100%;
    height: 2rpx;
    display: inline-block;
    margin: 20rpx 0rpx;
    background-color: gainsboro;
    text-align: center;
  }
  
  .article {
    margin: 30rpx;
  }
  
  .member-info {
    margin-left: 10rpx;
    font-weight: 600;
    line-height: 2.5rem;
  }
  
  .submit-btn {
    margin: 10rpx;
  }
  
  van-cell-group {
    margin: 20rpx 0 20rpx 0;
  }
  
  van-goods-action-button {
    margin-bottom: 15rpx;
  }